@model IEnumerable<ServiSalud1.Models.Pacientes>
@{
    ViewData["Title"] = "Nuestros Pacientes";
    <style>
        #titulo-pacientes {
            font-family: 'Arial', sans-serif;
            font-weight: bold;
            color: #336699;
            text-align: center;
            margin-top: 20px;
        }

        body {
            margin: 25px;
        }

        th {
            background-color: #1977cc;
            color: white;
        }

        .btn-editar {
            background-color: white;
            color: blue; /* Cambia el color del texto a azul */
            transition: background-color 0.3s, color 0.3s; /* Transiciones para el fondo y el color del texto */
        }

        .btn-borrar {
            background-color: white;
            color: red; /* Cambia el color del texto a rojo */
            transition: background-color 0.3s, color 0.3s; /* Transiciones para el fondo y el color del texto */
        }

        .btn-editar:hover {
            background-color: dodgerblue; /* Cambia el fondo a un tono de gris claro cuando el mouse pasa por encima */
        }

        .btn-borrar:hover {
            background-color: darkred; /* Cambia el fondo a un tono de gris claro cuando el mouse pasa por encima */
        }

        .btn-icon {
            color: gray; /* Cambia el color de los íconos a gris */
            transition: color 0.3s; /* Transición para el color de los íconos */
        }

        .btn-editar:hover .btn-icon,
        .btn-borrar:hover .btn-icon {
            color: white; /* Cambia el color de los íconos a blanco al pasar el mouse por encima del botón */
        }
    </style>
}
<br />
<br />
<br />
<br />
<br />

<div class="text-center">
    <h1 id="titulo-pacientes" class="display-4">Nuestros Pacientes</h1>
    <br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Codigo
                    </th>
                    <th>
                        DNI
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido
                    </th>
                    <th>
                        Telefono
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>
                        Sexo
                    </th>
                    <th>
                        Nacimiento
                    </th>
                    <th>
                        Direccion
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="datos_tabla">
                        <td>
                            @item.Id_pacientes
                        </td>
                        <td>
                            @item.DNI
                        </td>
                        <td>
                            @item.Nombre
                        </td>
                        <td>
                            @item.Apellido
                        </td>
                        <td>
                            @item.Telefono
                        </td>
                        <td>
                            @item.Correo
                        </td>
                        <td>
                            @item.Sexo
                        </td>
                        <td>
                            @item.Nacimiento
                        </td>
                        <td>
                            @item.Direccion
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id_pacientes" class="btn btn-primary text-white btn-editar">
                                <i class="fas fa-pencil-alt btn-icon"></i> <!-- Icono de lápiz -->
                            </a>
                            <a asp-action="Borrar" asp-route-id="@item.Id_pacientes" class="btn btn-danger text-white btn-borrar">
                                <i class="fas fa-trash-alt btn-icon"></i> <!-- Icono de bote de basura -->
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary text-white" asp-area="" asp-controller="Pacientes" asp-action="Crear">Añadir Paciente</a>
</div>
