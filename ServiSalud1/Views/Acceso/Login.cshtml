@model Usuario
@{
    Layout = null;
}
<head>
    <link href="@Url.Content("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <script src="@Url.Content("~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
</head>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/assets/css/estilos.css")" rel="stylesheet">
    <title>Iniciar Sesión</title>
</head>
<body style="background-image: url('https://static.vecteezy.com/system/resources/previews/002/268/676/non_2x/hospital-corridor-with-waiting-chairs-on-the-sides-free-photo.jpg');">
    <div class="login-container">
        <h2>Iniciar Sesión</h2>
        <form asp-controller="Acceso" asp-action="Login" method="post">
            <div class="form-group">
                <label for="usuario">Nombre de Usuario:</label>
                <input type="text" asp-for="Id_Usuario" required>
            </div>
            <div class="form-group">
                <label for="contrasena">Contraseña:</label>
                <input type="password" asp-for="Contra" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Iniciar Sesión">
            </div>
            <div class="form-group">
                <p>¿No estás registrado? <a asp-controller="Acceso" asp-action="Registrar">Registrate</a></p>
            </div>
        </form>
    </div>
</body>


