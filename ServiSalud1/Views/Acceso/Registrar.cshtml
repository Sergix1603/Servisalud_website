@model ServiSalud1.ViewModels.UsuarioViewModel
@{
    Layout = null;
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <script src="@Url.Content("~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <title>Registro</title>
    <style>
        body {
            background-image: url('https://static.vecteezy.com/system/resources/previews/002/268/676/non_2x/hospital-corridor-with-waiting-chairs-on-the-sides-free-photo.jpg');
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 30px; /* Aumentado el padding para hacer el formulario un poco más grande */
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            width: 80%; /* Aumentado el ancho del formulario */
            text-align: center;
        }

        .login-container h2 {
            color: #336699;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            text-align: left;
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .form-group input[type="submit"] {
            background-color: #336699;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-group input[type="submit"]:hover {
            background-color: #1a4b6e;
        }

        .form-group p {
            margin: 0;
            color: #777;
        }

        .form-group a {
            color: #336699;
            text-decoration: none;
        }

        .form-group a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h2>Registro</h2>
        <form asp-controller="Acceso" asp-action="Registrar" method="post">
            <div class="row">
                <div class="form-group col-lg-3">
                    <label asp-for="Nombre">Nombre</label>
                    <input type="text" asp-for="Nombre" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Apellido">Apellido</label>
                    <input type="text" asp-for="Apellido" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Id_Usuario">Nombre de Usuario</label>
                    <input type="text" asp-for="Id_Usuario" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Contra">Contraseña</label>
                    <input type="text" asp-for="Contra" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-3">
                    <label asp-for="Alergias">Alergias</label>
                    <input type="text" asp-for="Alergias" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Sexo">Sexo</label>
                    <select asp-for="Sexo" class="form-control" required>
                        <option value="">-- Seleccione su género --</option>
                        <option value="F">Femenino</option>
                        <option value="M">Masculino</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Peso">Peso(kg)</label>
                    <input type="text" asp-for="Peso" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Altura">Altura(m)</label>
                    <input type="text" asp-for="Altura" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-3">
                    <label asp-for="Telefono">Teléfono</label>
                    <input type="text" asp-for="Telefono" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Correo">Correo</label>
                    <input type="text" asp-for="Correo" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Direccion">Dirección</label>
                    <input type="text" asp-for="Direccion" required>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="DNI">DNI de Paciente</label>
                    <input type="text" asp-for="DNI" required>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Nacimiento">Fecha de Nacimiento</label>
                    <input asp-for="Nacimiento" required>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Antecedentes">Antecedentes</label>
                    <select asp-for="Antecedentes" class="form-control" required>
                        <option value="">-- Seleccionar antecedentes --</option>
                        <option value="Enfermedades genéticas">Enfermedades genéticas o hereditarias en la familia.</option>
                        <option value="Enfermedades crónicas">Enfermedades crónicas como diabetes, hipertensión, asma, etc.</option>
                        <option value="Lesiones">Enfermedades malignas como el cáncer u otros.</option>
                        <option value="Reacciones a medicamentos">Reacciones adversas a medicamentos anteriores</option>
                        <option value="Antecedentes ginecológicos">Para mujeres, historial de embarazos, partos y ciclos menstruales.</option>
                        <option value="Antecedentes psicológicos">Problemas de salud mental como depresión, ansiedad, etc.</option>
                        <option value="Lesiones">Lesiones anteriores, fracturas, etc.</option>
                        <option value="-">Sin antecedentes.</option>
                    </select>
                </div>
            </div>
            <center>
                <div class="form-group text-center col-sm-3">
                <input type="submit" value="Registrar">
                </div>
            </center>
            <div class="form-group">
                <p>¿Ya tienes una cuenta? <a asp-controller="Acceso" asp-action="Login">Inicia Sesión</a></p>
            </div>
        </form>
    </div>
    <script src="@Url.Content("~/Content/assets/js/main.js")"></script>
</body>
