@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>ServiSalud Cespedes </title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="@Url.Content("~/Content/assets/img/faviconss.png")" rel="icon">
  <link href="@Url.Content("~/Content/assets/img/faviconss.png")" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="@Url.Content("~/Content/assets/vendor/fontawesome-free/css/all.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/animate.css/animate.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/boxicons/css/boxicons.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/glightbox/css/glightbox.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/remixicon/remixicon.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/swiper/swiper-bundle.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/Content/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">

  <!-- Template Main CSS File -->
    <link href="@Url.Content("~/Content/assets/css/style.css")" rel="stylesheet">
    <style>
        .navbar ul li a {
            display: inline-block;
            padding: 10px 20px; /* Ajusta el espaciado según tus preferencias */
            border: 2px solid transparent; /* Borde inicial transparente */
            transition: border-color 0.3s, background-color 0.3s, color 0.3s; /* Transición para el cambio de color de borde, fondo y texto */
            font-weight: bold;
        }
        /* Estilo cuando el mouse pasa por encima de una opción */
        .navbar ul li a:hover {
            border-color: #336699;
            border-radius: 50px;
            background-color: #336699;
            color: #fff;
        }
    </style>

</head>
<body>
  <!-- ======= Top Bar ======= -->
  <div id="topbar" class="d-flex align-items-center fixed-top">
    <div class="container d-flex justify-content-between">
      <div class="contact-info d-flex align-items-center">
        <i class="bi bi-envelope"></i> <a href="mailto:sergiobuce04@gmail.com">servisalud@gmail.com</a>
        <i class="bi bi-phone"></i> +51 904 023 412
      </div>
    </div>
  </div>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">

      <a class="logo me-auto navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Content/assets/img/servisa.jpg" alt="ServiSalud Cespedes">
            </a>
            

      <nav id="navbar" class="navbar order-last order-lg-0">
        <ul>

            <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
            @if (User.IsInRole("Administrador") || User.IsInRole("Paciente"))
            {
                <li><a class="nav-link scrollto" asp-area="" asp-controller="ClinicaServicios" asp-action="Index">Servicios</a></li>
            }
            @if (User.IsInRole("Administrador") || User.IsInRole("Paciente"))
            {
                <li><a class="nav-link scrollto" asp-area="" asp-controller="Empleados" asp-action="Index">Especialistas</a></li>
            }
            @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
            {
                <li><a class="nav-link scrollto" asp-area="" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
            }
            <li><a class="nav-link scrollto" asp-area="" asp-controller="Especialidad" asp-action="Index">Especialidades</a></li>
            @if (User.IsInRole("Administrador") || User.IsInRole("Paciente"))
            {
                <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Contacto">Contactenos</a></li>
            }
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->
      <a class="appointment-btn scrollto" asp-area="" asp-controller="RegistrodeCitas" asp-action="Index"><span class="d-none d-md-inline">Reserve una</span> CITA</a>
      <nav id="navbar" class="navbar order-last order-lg-0">
          <ul>
            <li>
                <a asp-area="" asp-controller="Acceso" asp-action="Salir" style="color: red">
                    <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                </a>
            </li>
          </ul>
      </nav>
    </div>
  </header><!-- End Header -->
    <main id="main">
        @RenderBody()
    </main>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="@Url.Content("~/Content/assets/vendor/purecounter/purecounter_vanilla.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/glightbox/js/glightbox.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/swiper/swiper-bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendor/php-email-form/validate.js")"></script>

    <!-- Template Main JS File -->
    <script src="@Url.Content("~/Content/assets/js/main.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>